{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"target": "es6",
		"outDir": "dist",
		"typeRoots": [ "./types/**/*", "./node_modules/@types"],
		"types": [
			"node",
			"index.d.ts"
		]
	},
	"include": ["./services/*"],
	"exclude": ["node_modules", "types"],
  "ts-node": {
    "files": true
  }
}
